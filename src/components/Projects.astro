---
const PROJECTS = [
  {
    title: "Micrositios Sesaet",
    description:
      "Desarrollo y mantenimiento de aplicaciones asi como soporte a la plataforma digital estatal para declaraciones de los servidores publicos en el estado de tlaxcala.",
    link: "https://oic.saetlax.org/",
    github: "#",
    image: "/projects/oic.webp",
    tags: ["Angular", "Graphql", "Nestjs"],
  },
];
---

{
  PROJECTS.map(({ title, description, tags, image }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul>
        {tags.map((tag) => (
          <li>{tag}</li>
        ))}
      </ul>
      <img
        src={image}
        alt="title"
        class="rounded-lg shadow-2xl shadow-white/20"
      />
    </article>
  ))
}
