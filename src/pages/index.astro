---
import Badge from "../components/Badge.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import SocialPill from "../components/SocialPill.astro";
import BriftCase from "../components/icons/BriftCase.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import LinkedIn from "../components/icons/LinkedIn.astro";
import Mail from "../components/icons/Mail.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Porfolio de Ramiro Tepehua - Desarrollador y Programador Web con 13 años de experiencia"
  description="Contrata a ramiro tepehua por su experiencia en desarrollo de software, capacidad para trabajar en equipo, apasionado por la programación"
>
  <main>
    <SectionContainer class="py-44 pb-28">
      <img src="/rtc3.png" alt="photo rtc" class="rounded-full size-12 mb-4" />
      <h1 class="text-4xl font-bold text-white flex flex-row gap-x-4 pb-10">
        Hey, Soy Ramiro Tepehua
        <a
          href="http://www.linkedin.com/in/ramiro-tepehua-056ab4176"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Trabajando actualmente...</Badge>
        </a>
      </h1>
      <h2 class="text-xl opacity-80 text-balance text-white">
        <span>+13 años de experiencia.</span><span
          class="text-yellow-200/90 font-semibold"
        >
          Desarrollador full stack.</span
        >
        <span class="opacity-75">
          De Tlaxcala. México, Especializado en mantenimiento y creación de
          aplicaciones a medida.
        </span>
      </h2>
      <nav class="flex gap-x-4 mt-8">
        <SocialPill href="https://github.com/rtcface">
          <GitHubIcon class="size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="http://www.linkedin.com/in/ramiro-tepehua-056ab4176">
          <LinkedIn class="size-6 text-white/90" />
          LinkedIn
        </SocialPill>
        <SocialPill href="mailto:rtcface@gmail.com">
          <Mail class="size-6" />
          rtcface@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>
    <SectionContainer id="experiencia">
      <h2
        class="text-2xl font-semibold mb-6 text-white flex items-center gap-x-3"
      >
        <BriftCase class="size-8" /> Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>
  </main>
</Layout>
